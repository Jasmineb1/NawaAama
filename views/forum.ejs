<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/stylesheets/forum.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Dancing+Script:wght@500&display=swap">

    <title>Pregnancy Forum</title>
</head>
<body>
    <header> 
        <h1>Tender Beginnings: A Pregnancy Support Oasis</h1>
    </header>
    <section id="community">
        <h2>Community Hub</h2>
        <div id="forum">
          <% if (comments && comments.length > 0) { %>
              <% comments.forEach(comment => { %>
                  <div class="thread">
                      <h3><%= comment.username %></h3>
                      <p>Posted on <%= comment.date %></p>
                      <p><%= comment.content %></p>
                  </div>
              <% }); %>
          <% } else { %>
              <p>No comments available.</p>
          <% } %>

          <div id="new-comment-form">
              <h3>Add a New Comment</h3>
              <form action="/add-comment" method="post">
                  <label for="username">Your Name:</label>
                  <input type="text" id="username" name="username" required>

                  <label for="comment-content">Comment Content:</label>
                  <textarea id="comment-content" name="content" rows="4" required></textarea>

                  <button type="submit">Post Comment</button>
              </form>
          </div>
        </div>
    </section>

    <footer>
        <p>&copy; Pregnancy Forum</p>
    </footer>
</body>
</html>
